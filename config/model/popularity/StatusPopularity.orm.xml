<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\PublicationPopularity\Entity\StatusPopularity"
            repository-class="App\PublicationPopularity\Repository\StatusPopularityRepository"
            table="status_popularity">

        <indexes>
            <index name="status_popularity_idx" columns="status_id,checked_at,total_retweets,total_favorites" />
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator" />
        </id>

        <many-to-one
            field="status"
            target-entity="App\Twitter\Infrastructure\Api\Entity\Status"
            inversed-by="popularity"
        >
            <join-column
                name="status_id"
                referenced-column-name="ust_id"
            />
        </many-to-one>

        <field
            name="checkedAt"
            column="checked_at"
            type="datetime"
        />

        <field
            name="totalRetweets"
            column="total_retweets"
            type="integer"
        />

        <field
            name="totalFavorites"
            column="total_favorites"
            type="integer"
        />

    </entity>

</doctrine-mapping>
