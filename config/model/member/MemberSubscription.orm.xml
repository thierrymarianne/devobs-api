<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Membership\Infrastructure\Entity\MemberSubscription"
            repository-class="App\Membership\Infrastructure\Repository\MemberSubscriptionRepository"
            table="member_subscription">

        <indexes>
            <index name="subscription_idx" columns="member_id,subscription_id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint
                name="member_subscription_unique"
                columns="member_id,subscription_id"
            />
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <many-to-one
            field="member"
            target-entity="App\Membership\Infrastructure\Entity\Legacy\Member"
            inversed-by="subscription"
        >
            <join-column
                name="member_id"
                referenced-column-name="usr_id"
            />
        </many-to-one>

        <many-to-one
            target-entity="App\Membership\Infrastructure\Entity\Legacy\Member"
            field="subscription"
            inversed-by="subscribee"
        >
            <join-column
                name="subscription_id"
                referenced-column-name="usr_id"
            />
        </many-to-one>

        <field
            name="hasBeenCancelled"
            column="has_been_cancelled"
            type="boolean"
        />

    </entity>

</doctrine-mapping>
