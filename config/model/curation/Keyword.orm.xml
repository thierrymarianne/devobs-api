<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Twitter\Domain\Curation\Entity\Keyword"
            repository-class="App\Twitter\Infrastructure\Publication\Repository\KeywordRepository"
            table="keyword">

        <indexes>
            <index name="keyword_idx" columns="keyword,status_id,member_id,publication_date_time"/>
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <many-to-one
            field="status"
            target-entity="App\Twitter\Infrastructure\Api\Entity\Status">
            <join-column
                name="status_id"
                referenced-column-name="ust_id"
            />
        </many-to-one>

        <many-to-one
            field="member"
            target-entity="App\Membership\Domain\Entity\Legacy\Member">
            <join-column
                name="member_id"
                referenced-column-name="usr_id" />
        </many-to-one>

        <many-to-one
            target-entity="App\Twitter\Infrastructure\Api\Entity\Aggregate"
            field="aggregate"
            inversed-by="timelyStatuses">
            <join-column name="aggregate_id" />
        </many-to-one>

        <field
            name="aggregateName"
            column="aggregate_name"
            type="string"
            nullable="true"
            length="100"
        />

        <field
            name="keyword"
            column="keyword"
            type="string"
            length="511"
        />

        <field
            name="publicationDateTime"
            column="publication_date_time"
            type="datetime"
        />

        <field
            name="occurrences"
            column="occurrences"
            type="integer"
        />
    </entity>

</doctrine-mapping>
