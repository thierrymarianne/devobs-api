<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Twitter\Domain\Curation\Entity\NotFoundStatus"
            repository-class="App\Twitter\Infrastructure\Publication\Repository\NotFoundStatusRepository"
            table="status_not_found">
        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>
        <one-to-one
                field="status"
                target-entity="App\Twitter\Infrastructure\Api\Entity\Status">
            <join-column
                name="status_id"
                referenced-column-name="ust_id"
            />
        </one-to-one>
        <one-to-one
                field="archivedStatus"
                target-entity="App\Twitter\Infrastructure\Api\Entity\ArchivedStatus">
            <join-column
                name="archived_status_id"
                referenced-column-name="ust_id"
            />
        </one-to-one>
    </entity>

</doctrine-mapping>
