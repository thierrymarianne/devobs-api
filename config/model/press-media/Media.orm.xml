<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\PressMedia\Entity\Media"
            repository-class="App\PressMedia\Repository\MediaRepository"
            table="media">

        <indexes>
            <index name="media_idx" columns="source_id,name,type_id"/>
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field
            name="name"
            column="name"
            length="255"
        />

        <field
            name="sourceId"
            column="source_id"
            type="integer"
            unique="true"
        />

        <field
            name="type"
            column="type_id"
            length="255"
        />

        <field
            name="channel"
            column="channel"
            length="255"
            nullable="true"
        />

        <field
            name="periodicity"
            column="periodicity"
            length="255"
            nullable="true"
        />

        <field
            name="scope"
            column="scope"
            length="255"
            nullable="true"
        />

        <one-to-one
            field="member"
            target-entity="App\Membership\Domain\Entity\Legacy\Member"
        >
            <join-column
                name="member_id"
                referenced-column-name="usr_id"
            />
        </one-to-one>

        <one-to-many
            field="ownerships"
            target-entity="App\PressMedia\Entity\Ownership"
            mapped-by="media"
        />

    </entity>

</doctrine-mapping>
