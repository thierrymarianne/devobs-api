version: '3'
services:

    reverse-proxy:
        networks:
            custom_network:
                aliases:
                    - reverse-proxy

    web:
        networks:
            custom_network:
                aliases:
                    - web

    web-worker:
        networks:
            custom_network:
                aliases:
                    - web-worker

    worker:
        networks:
            custom_network:
                aliases:
                    - worker

    database:
        ports:
            - "127.0.0.1:5433:5432"
        networks:
            custom_network:
                aliases:
                    - database

    cache:
        networks:
            custom_network:
                aliases:
                    - cache

    messenger:
        networks:
            custom_network:
                aliases:
                    - messenger

networks:
    custom_network:
        driver: bridge
        ipam:
            config:
                - subnet: 192.168.196.0/28
                  gateway: 192.168.196.1

