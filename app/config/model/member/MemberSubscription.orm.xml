<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Member\Entity\MemberSubscription"
            repository-class="App\Member\Repository\MemberSubscriptionRepository"
            table="member_subscription">

        <indexes>
            <index name="subscription_idx" columns="member_id,subscription_id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="member_id,subscription_id" name="unique_subscription" />
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <many-to-one
            field="member"
            target-entity="WTW\UserBundle\Entity\User"
            inversed-by="subscription"
        >
            <join-column
                name="member_id"
                referenced-column-name="usr_id"
            />
        </many-to-one>

        <many-to-one
            target-entity="WTW\UserBundle\Entity\User"
            field="subscription"
            inversed-by="subscribee"
        >
            <join-column
                name="subscription_id"
                referenced-column-name="usr_id"
            />
        </many-to-one>

    </entity>

</doctrine-mapping>
