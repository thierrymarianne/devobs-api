<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Analysis\Entity\PublicationFrequency"
            table="publication_frequency">

        <indexes>
            <index name="frequency_index" columns="member_id,sample_id,updated_at" />
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <one-to-one
            field="member"
            target-entity="WTW\UserBundle\Entity\User">
            <join-column
                name="member_id"
                referenced-column-name="usr_id"
            />
        </one-to-one>

        <many-to-one
            field="sample"
            target-entity="App\Analysis\Entity\Sample"
            inversed-by="publicationFrequencies"
        >
            <join-column
                name="sample_id"
                referenced-column-name="id"
            />
        </many-to-one>

        <field
            name="perDayOfWeek"
            column="per_day_of_week"
            type="text"
        />

        <field
            name="perHourOfDay"
            column="per_hour_of_day"
            type="text"
        />

        <field
            name="perDayOfWeekPercentage"
            column="per_day_of_week_percentage"
            type="text"
        />

        <field
            name="perHourOfDayPercentage"
            column="per_hour_of_day_percentage"
            type="text"
        />

        <field
            name="updatedAt"
            column="updated_at"
            type="datetime"
        />

    </entity>

</doctrine-mapping>
