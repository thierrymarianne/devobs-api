<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Aggregate\Entity\ArchivedTimelyStatus"
            repository-class="App\Aggregate\Repository\ArchivedTimelyStatusRepository"
            table="archived_timely_status">

        <indexes>
            <index name="publication_idx" columns="publication_date_time"/>
            <index name="status_idx" columns="status_id,publication_date_time,time_range,aggregate_id,aggregate_name"/>
            <index name="member_name" columns="member_name"/>
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <one-to-one
                field="status"
                target-entity="WeavingTheWeb\Bundle\ApiBundle\Entity\ArchivedStatus">
            <join-column
                name="status_id"
                referenced-column-name="ust_id"
            />
        </one-to-one>

        <many-to-one
            target-entity="WeavingTheWeb\Bundle\ApiBundle\Entity\Aggregate"
            field="aggregate"
            inversed-by="timelyStatuses"
        />

        <field
            name="publicationDateTime"
            column="publication_date_time"
            type="datetime"
        />

        <field
            name="aggregateName"
            column="aggregate_name"
            type="string"
            length="100"
        />

        <field
            name="memberName"
            column="member_name"
            type="string"
            length="100"
        />

        <field
            name="timeRange"
            column="time_range"
            type="integer"
        />

    </entity>

</doctrine-mapping>
