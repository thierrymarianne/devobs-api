<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Aggregate\Entity\SearchMatchingStatus"
            repository-class="App\Aggregate\Repository\SearchMatchingStatusRepository"
            table="search_matching_status">

        <indexes>
            <index name="status_idx" columns="status_id,publication_date_time,time_range,member_name"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="status_id,saved_search_id" name="unique_status" />
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <many-to-one
                field="status"
                target-entity="WeavingTheWeb\Bundle\ApiBundle\Entity\Status">
            <join-column
                name="status_id"
                referenced-column-name="ust_id"
            />
        </many-to-one>

        <many-to-one
                field="savedSearch"
                target-entity="App\Aggregate\Entity\SavedSearch">
            <join-column
                name="saved_search_id"
                referenced-column-name="id"
            />
        </many-to-one>

        <field
            name="publicationDateTime"
            column="publication_date_time"
            type="datetime"
        />

        <field
            name="memberName"
            column="member_name"
            type="string"
            length="100"
        />

        <field
            name="timeRange"
            column="time_range"
            type="integer"
        />

    </entity>

</doctrine-mapping>
